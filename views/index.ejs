<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	
	<%- include('./partials/header') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner2.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Nuevos ingresos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">NUEVOS INGRESOS</h2>
			</div>
			<!-- Show the "ultimos" products -->


			<% for (let i = 0; i < 4; i++) { %> 
				<div class="col-12 col-sm-6 col-lg-3"> 
				   <section class="product-box">
					   <a href="/product/<%= buzos_buzos[i].id %>">
						   <figure class="product-box_image">
							   <img src="<%= buzos_buzos[i].imagen %>" alt=" ">
						   </figure>
						   <article class="product-box_data">
							   <h2> <%= buzos_buzos[i].marca + '' + buzos_buzos[i].modelo %> </h2>
							   <h3> 
								   Talles disponibles: <%= buzos_buzos[i].talles %>
								   <h3>
								   El buzo se publico el: <%= buzos_buzos[i].fechaDePublicacion %>

									</h3>
							   </h3>
							   <p>Comentarios: <%=buzos_buzos[i].comentarios.length %> </p>  
							   <a href="/product/productEdit/<%= buzos_buzos[i].id %> "> <i class="fas fa-edit"></i> </a>
							   									
						   </article>
					   </a>
				   </section>
				   
			   	</div>

				<% } %>   
				
   
		</div>
	</div>
	
	
	
	<!-- /Mas comentados -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">MÁS COMENTADOS</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<% for (let i = 0; i < 12; i++) { %> 

				<% if (buzos_buzos[i].comentarios.length > 5) { %> 

						<div class="col-12 col-sm-6 col-lg-3"> 
						<section class="product-box">
							<a href="/product/<%= buzos_buzos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= buzos_buzos[i].imagen %>" alt=" ">
								</figure>
								<article class="product-box_data">
									<h2> <%= buzos_buzos[i].marca + ' ' + buzos_buzos[i].modelo %> </h2>
									<h3> 
										Talles disponibles: <%= buzos_buzos[i].talles %>
										<h3>
										El buzo se publico el: <%= buzos_buzos[i].fechaDePublicacion %>

											</h3>
									</h3>
									<div>
									<p>Comentarios: <%=buzos_buzos[i].comentarios.length %>  </p> 
									<p> <i class="fas fa-edit"></i>  </p> 
									
									</div>
																		
								</article>
							</a>
						</section>
						
						</div>
				<% } %> 
			
			<% } %>   
				
   
		</div>
	</div>
	
	<!-- <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>

			 -->

	<%- include('./partials/footer') %>


</body>	
</html>